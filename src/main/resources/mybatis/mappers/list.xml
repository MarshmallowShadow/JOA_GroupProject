<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="list">

	<!-- 글쓰기 -->
	<insert id="listWrite" parameterType="ListVo">
		<![CDATA[
			insert into q_list
			values(seq_q_list_no.nextval, #{userNo}, #{boardCategory}, #{title}, #{content}, sysdate, 0)
		]]>
	</insert>


	<!-- 리스트 출력 -->
 	<select id="listList" parameterType="String" resultType="ListVo">
		<![CDATA[
			SELECT q_list_no, user_no, board_category, title, content, reg_date, view_count
			FROM q_list	
		]]>
	</select>
 
</mapper>